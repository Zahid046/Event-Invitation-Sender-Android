<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nasir.myapplication">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/event2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/event2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.nasir.myapplication.MainActivity" />
        <activity
            android:name="com.example.nasir.myapplication.CreateCustomInvitation"
            android:parentActivityName="com.example.nasir.myapplication.Category" />
        <activity android:name="com.example.nasir.myapplication.ViewInvitationDetails" />
        <activity
            android:name="com.example.nasir.myapplication.Category"
            android:parentActivityName="com.example.nasir.myapplication.MainActivity" />
        <activity
            android:name="com.example.nasir.myapplication.CreateBirthdayInvitation"
            android:parentActivityName="com.example.nasir.myapplication.Category" />
        <activity
            android:name="com.example.nasir.myapplication.CreateMarriageInvitation"
            android:parentActivityName="com.example.nasir.myapplication.Category" />
        <activity android:name="com.example.nasir.myapplication.Help" />
        <activity android:name="com.example.nasir.myapplication.AboutUs" />
        <activity android:name="com.example.nasir.myapplication.BirthdayPreview" />
        <activity android:name="com.example.nasir.myapplication.MarriagePreview" />
        <activity android:name="com.example.nasir.myapplication.CustomPreview" />
        <activity
            android:name="com.example.nasir.myapplication.ProgressScreen"
            android:theme="@style/AppTheme1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.nasir.myapplication.Feedback" />
        <activity android:name="com.example.nasir.myapplication.FeedbackPreview" />
        <activity android:name="com.example.nasir.myapplication.EventList"
                   android:parentActivityName="com.example.nasir.myapplication.MainActivity"
            />
        <activity android:name="com.example.nasir.myapplication.Eventview"
            android:parentActivityName="com.example.nasir.myapplication.EventList"></activity>
    </application>

</manifest>